.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #fff;
}

/* 筛选区域 */
.filter-section {
  display: flex;
  flex-direction: column;
  padding: 12px;
  background: #fff;
  border-bottom: 1px solid #f5f5f5;
}

.filter-group {
  display: flex;
  flex-direction: column;
  margin-bottom: 12px;
}

.filter-title {
  font-size: 14px;
  color: #666;
  margin-bottom: 8px;
}

.filter-options {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
}

.filter-tag {
  padding: 6px 12px;
  border-radius: 16px;
  font-size: 13px;
  background: #f5f5f5;
  color: #333;
}

.filter-tag.active {
  background: #1989fa;
  color: #fff;
}

/* 产品展示区 */
.fabric {
  display: flex;
  flex-wrap: wrap;
  padding: 8px;
  gap: 8px;
  justify-content: space-between;
}

.fabric-item {
  display: flex;
  flex-direction: column;
  width: calc(50% - 4px);
  background-color: #fff;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
}

.fabric-image {
  width: 100%;
  position: relative;
  overflow: hidden;
}

.fabric-image image {
  width: 100%;
  display: block;
  border-radius: 12px;
  padding: 4px;
}

.card-description {
  display: flex;
  flex-direction: column;
  gap: 2px;
  padding: 8px 10px;
}

.fabric-name {
  font-size: 13px;
  color: #333;
  line-height: 1.3;
}

.price {
  color: #ff2b2b;
  font-size: 16px;
  font-weight: bold;
  line-height: 1;
}

.price::before {
  content: '¥';
  font-size: 12px;
}

.fabric-tag {
  font-size: 11px;
  color: #999;
  line-height: 1;
}