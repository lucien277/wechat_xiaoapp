.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #fff;
}

.big-title {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30px;
  font-weight: bold;
  color: #333;
  padding: 20px 0;
}

/* 轮播 */
.swiper-container {
  width: 100%;
  height: 240px;
}

.swiper-item {
  display: flex;
  width: 100%;
  height: 100%;
}

.slide-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 导航栏 */
.home-navigation {
  display: flex;
  justify-content: space-around;
  padding: 16px 0;
  background-color: #fff;
  border-bottom: 1px solid #f5f5f5;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.nav-link {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4px;
}

.nav-icon {
  width: 50px;
  height: 50px;
}

.nav-text {
  font-size: 14px;
  color: #333;
}

.subtitle {
  padding: 16px;
  font-size: 16px;
  color: #333;
  font-weight: 500;
}

/* 产品展示区 */
.fabric {
  display: flex;
  flex-wrap: wrap;
  padding: 8px;
  gap: 8px;
  justify-content: space-between;
}

.fabric-item {
  display: flex;
  flex-direction: column;
  width: calc(50% - 4px);
  background-color: #fff;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
}

.fabric-image {
  width: 100%;
  position: relative;
  border: none;
  overflow: hidden;
}

.fabric-image image {
  width: 100%;
  display: block;
  border-radius: 12px;
  padding: 4px;
}

.card-description {
  display: flex;
  flex-direction: column;
  gap: 2px;
  padding: 8px 10px;
}

.fabric-name {
  font-size: 13px;
  color: #333;
  line-height: 1.3;
}

.price {
  color: #ff2b2b;
  font-size: 16px;
  font-weight: bold;
  line-height: 1;
}

.price::before {
  content: '¥';
  font-size: 12px;
}

.fabric-tag {
  font-size: 11px;
  color: #999;
  line-height: 1;
}