.container {
  background-color: #f8f8f8;
}

.header {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20px;
}

.title {
  font-size: 24px;
  color: #333;
  display: block;
}
/* 轮播 */
.swiper-container {
  width: 100%; /* 设置宽度为100% */
  height: 240px; /* 设置高度 */
  /* margin-bottom: 5px; */
}
.swiper-item {
  width: 100%; /* 确保每个轮播项也占满整个容器宽度 */
  height: 100%; /* 使轮播项的高度与容器相同 */
  background-size: cover; /* 背景图片覆盖整个容器 */
  background-position: center; /* 背景图片居中显示 */
  object-fit: cover;
}
.slide-image {
  width: 100%; /* 图片宽度占满整个轮播项 */
  height: 100%; /* 图片高度占满整个轮播项 */
}
/* 导航栏 */
.nav-container {
  height: 100%; /* 或者设置为屏幕高度 */
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  border: 2px solid black;
}
.nav-card {
  background-color: #48c5eb;
  color: #e74040;
  padding: 20rpx;
  margin:10px;
  border-radius: 10rpx; /* 圆角 */
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1); /* 阴影 */
  cursor: pointer; /* 显示可点击的指针样式 */
}
.nav-title {
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
}

.subtitle {
  display:flex;
  justify-content: center;
  font-size: 20px;
  color: #520c0c;
  margin-bottom: 10px;
}
/* 面料 */
.fabric {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  margin: auto;
  padding: 10px;
  background-color:#f0f0f0;
  border: 1px solid black;
}
.fabric-item {
  width: 45%;
  margin-top: 5px;
  margin-bottom: 5px;
  background-color: #fff;
  border-radius: 8px;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
  justify-content: center;
  align-items: center;
}
.fabric-image {
  width: 100%;
  height: 200px;
  border-radius: 4px;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.5);
}
.card-describtion{
  display: flex; /* 开启Flexbox布局 */
  justify-content: center; /* 水平居中 */
  align-items: center; /* 垂直居中 */
}
.fabric-name {
  text-align: center;
  font-size: 16px;
  color: #333;
}