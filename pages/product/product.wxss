/* pages/product-detail/product-detail.wxss */
.product-detail-container {
  display: flex;
  flex-direction:column;
  width: 100%;
}
/* 第一部分——图片 */
.product-detail-image {
  width: 100%;
  height: 200px;
}
.product-img {
  width: 100%; /* 确保每个轮播项也占满整个容器宽度 */
  height: 100%; /* 使轮播项的高度与容器相同 */
  background-size: cover; /* 背景图片覆盖整个容器 */
  background-position: center; /* 背景图片居中显示 */
  object-fit: cover;
}
/*第二部分——描述 */
.product-detail-description {
  width: 90%;
  margin-bottom: 20px;
}
.product-description {
  font-size: 16px;
  color: #666;
}
.product-detail-price {
  margin-bottom: 20px;
}
.price-tag {
  font-size: 20px;
  color: #e53e3e;
  font-weight: bold;
}

.product-detail-actions {
  width: 90%;
}

.buy-button {
  background-color: #007aff;
  color: white;
  padding: 10px 20px;
  border-radius: 5px;
  font-size: 16px;
  border: none;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

.buy-button:hover {
  background-color: #043b8f;
}