/* pages/product-detail/product-detail.wxss */
.product-detail-container {
  display: flex;
  flex-direction:column;
  width: 100%;
}
/* 第一部分——图片 */
.product-detail-image {
  width: 100%;
  height: 200px;
}
.product-img {
  width: 100%; /* 确保每个轮播项也占满整个容器宽度 */
  height: 100%; /* 使轮播项的高度与容器相同 */
  background-size: cover; /* 背景图片覆盖整个容器 */
  background-position: center; /* 背景图片居中显示 */
  object-fit: cover;
}
/*第二部分——描述 */
.product-detail-description {
  width: 90%;
  margin-bottom: 20px;
}
.product-description {
  font-size: 16px;
  color: #666;
}
.product-detail-price {
  margin-bottom: 20px;
}
.price-tag {
  font-size: 20px;
  color: #e53e3e;
  font-weight: bold;
}

.product-detail-actions {
  width: 90%;
}

.buy-button {
  background-color: #007aff;
  color: white;
  padding: 10px 20px;
  border-radius: 5px;
  font-size: 16px;
  border: none;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

.buy-button:hover {
  background-color: #043b8f;
}

.product-detail {
  min-height: 100vh;
  background: #f8f8f8;
  padding-bottom: 60px;
}

.product-swiper {
  width: 100%;
  height: 400px;
}

.slide-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.product-info {
  background: #fff;
  padding: 16px;
  margin-bottom: 12px;
}

.product-title {
  font-size: 18px;
  font-weight: bold;
  color: #333;
  margin-bottom: 8px;
}

.product-price {
  font-size: 24px;
  color: #ff4d4f;
  font-weight: bold;
  margin-bottom: 12px;
}

.product-tags {
  display: flex;
  gap: 8px;
}

.tag {
  font-size: 12px;
  color: #666;
  background: #f5f5f5;
  padding: 4px 8px;
  border-radius: 4px;
}

.product-details {
  background: #fff;
  padding: 16px;
}

.detail-section {
  margin-bottom: 20px;
}

.section-title {
  font-size: 16px;
  font-weight: bold;
  color: #333;
  margin-bottom: 12px;
  padding-left: 8px;
  border-left: 4px solid #1989fa;
}

.params-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 12px;
}

.param-item {
  display: flex;
  align-items: center;
  padding: 8px;
  background: #f8f8f8;
  border-radius: 6px;
}

.param-label {
  color: #666;
  font-size: 14px;
  margin-right: 8px;
}

.param-value {
  color: #333;
  font-size: 14px;
  font-weight: 500;
}

.description {
  font-size: 14px;
  color: #666;
  line-height: 1.6;
}

.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 60px;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 0 16px;
  box-shadow: 0 -2px 6px rgba(0, 0, 0, 0.06);
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 16px;
}

.action-icon {
  width: 24px;
  height: 24px;
  margin-bottom: 2px;
}

.action-button {
  flex: 1;
  height: 40px;
  margin: 0 6px;
  border-radius: 20px;
  font-size: 14px;
  line-height: 40px;
  text-align: center;
}

.action-button.primary {
  background: #1989fa;
  color: #fff;
}